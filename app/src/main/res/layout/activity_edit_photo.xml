<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".menuProfile.EditPhotoActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_editfoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_uphoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/user"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"/>
    <ImageView
        android:id="@+id/iv_pilihphoto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_addphoto"
        app:tint="@color/fontBlackEnable"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="-50dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_simpanfoto"
        android:layout_width="203dp"
        android:layout_height="48dp"
        android:layout_marginBottom="27dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simpan Foto"
            android:textSize="7pt"
            android:layout_gravity="center"
            android:textColor="@color/White"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>