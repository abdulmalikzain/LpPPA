<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_marginEnd="5dp">

    <LinearLayout
        android:id="@+id/ll_listhome_penyidik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:src="@drawable/user_police"
            android:scaleType="centerCrop"
            android:id="@+id/iv_listhome_penyidik"/>
        <TextView
            android:textColor="@color/fontBlackEnable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="7pt"
            android:id="@+id/tv_listhome_nama"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:maxLength="10" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pangkat"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/tv_listhome_pangkat"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>