<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PidanaAnakActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_kekerasananak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/fontBlackEnable"
                android:text="Grafik Kekerasan Terhadap Anak"
                android:textStyle="bold"
                android:gravity="center"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/av_kekerasananak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    app:indicatorColor="@color/colorPrimaryDark"
                    app:indicatorName="BallClipRotateIndicator"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/linechart_kekerasananak"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/fontBlackEnable"
                android:text="Grafik Persetubuhan Terhadap Anak"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/av_persetubuhananak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    app:indicatorColor="@color/colorPrimaryDark"
                    app:indicatorName="BallClipRotateIndicator"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/linechart_persetubuhananak"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fontBlackEnable"
                    android:text="Grafik Cabul Terhadap Anak"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:gravity="center"/>
                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/av_cabulanak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    app:indicatorColor="@color/colorPrimaryDark"
                    app:indicatorName="BallClipRotateIndicator"/>
                <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/linechart_cabulanak"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>